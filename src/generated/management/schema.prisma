generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/management"
}

datasource db {
  provider = "mysql"
  url      = env("MANAGEMENT_DATABASE_URL")
}

model ContractStatus {
  id               Int      @id @default(autoincrement())
  contract_name    String   @db.VarChar(50)
  contract_address String   @unique @db.VarChar(42)
  network          String   @db.VarChar(20)
  is_paused        Boolean  @default(false)
  last_block       BigInt?
  last_updated     DateTime @default(now()) @db.Timestamp(3)
  created_at       DateTime @default(now()) @db.Timestamp

  @@map("contract_status")
}
