# Monitor Service Environment Variables

# Management Database URL (for contract address synchronization)
MANAGEMENT_DATABASE_URL="mysql://username:password@localhost:3306/management_db"

# Monitor Database URL (for storing events and function calls)
MONITOR_DATABASE_URL="mysql://username:password@localhost:3306/monitor_db"

# Alternative: Use single database URL if both databases are the same
# DATABASE_URL="mysql://username:password@localhost:3306/ngp_db"

# Configuration file path (optional)
CONFIG_PATH="config.bsc.json"

# Log level (optional)
LOG_LEVEL="info"
